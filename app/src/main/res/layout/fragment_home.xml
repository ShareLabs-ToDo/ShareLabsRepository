    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:paddingLeft="150dp"
        android:paddingRight="130dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="WELCOME!"
        app:titleTextColor="@color/black" />

    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="124dp"
        android:layout_height="25dip"
        android:layout_below="@+id/tbToolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="169dp"
        android:background="@android:color/holo_blue_light"
        android:lineSpacingExtra="0dp"
        android:maxHeight="10dp"
        android:text="ShareLabs PROJECT"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:lineHeight="40dp" />

    <TextView
        android:id="@+id/tvYourTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbToolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:text="YOUR\nTASKS"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAllTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbToolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="ALL TASKS"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivSettingsIcon"
        android:layout_width="57dp"
        android:layout_height="92dp"
        android:layout_below="@+id/tvAllTasks"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="300dp"
        android:contentDescription="ivSettingsIcon"
        app:srcCompat="@drawable/ic_baseline_settings_24" />

    <ProgressBar
        android:id="@+id/pbProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="45dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tbToolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="411dp"
        android:background="#2196F3"
        android:rotation="0"
        android:transformPivotX="0dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="187dp" />

</RelativeLayout>